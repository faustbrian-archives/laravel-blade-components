{
    "name": "konceiver/laravel-blade-components",
    "description": ":package_description",
    "keywords": [
        "konceiver",
        "laravel-blade-components"
    ],
    "homepage": "https://github.com/konceiver/laravel-blade-components",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@konceiver.dev",
            "homepage": "https://konceiver.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/support": "^8.0",
        "konceiver/better-number-formatter": "^2.0"
    },
    "require-dev": {
        "konceiver/laravel-stan": "^1.1",
        "nunomaduro/laravel-mojito": "^0.2.6"
    },
    "autoload": {
        "psr-4": {
            "Konceiver\\BladeComponents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Konceiver\\BladeComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --min=100 --coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Konceiver\\BladeComponents\\Providers\\BladeComponentServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
